<div class="login_box" id="login_box">
    <form class="form-signin" action="/auth/login" method="post">
        <h2 class="form-signin-heading"><i class="fa fa-sign-in"></i>&nbsp; Log in</h2>
        <div class="form-group">
            <div class="input-group input-group-lg">
                <i class="input-group-addon fa fa-envelope fa-lg" id="sa-login-email"></i>
                <input type="email" class="form-control" placeholder="Email address" aria-describedby="sa-login-email" name="email">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-lg">
                <i class="input-group-addon fa fa-key fa-lg" id="sa-login-pwd"></i>
                <input type="password" class="form-control" placeholder="Password" aria-describedby="sa-login-pwd" name="password">
            </div>
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <a class="forgot" href="/account/begin_password_reset">Forgot password?</a>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
        <div class="row omb_row-sm-offset-3 omb_loginOr">
            <div>
                <hr class="omb_hrOr">
                <span class="omb_spanOr">OR</span>
            </div>
        </div>
        <div>
            <div class="form-group">
                <a class="btn btn-block btn-social btn-fbk">
                    <i class="fa fa-facebook"></i> Log in with Facebook
                </a>
            </div>
            <div class="form-group">
                <a class="btn btn-block btn-social btn-google">
                    <i class="fa fa-google"></i> Log in with Google
                </a>
            </div>
        </div>
    </form>
</div>
